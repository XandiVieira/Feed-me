<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/register"
            android:textColor="@color/dark_text"
            android:textSize="@dimen/title" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/register_slogan"
        android:textColor="@color/text"
        android:textSize="@dimen/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/segoe_small"
                android:text="@string/name"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/subtitle" />

            <EditText
                android:id="@+id/name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name"
                android:backgroundTint="@color/grey_dark"
                android:fontFamily="@font/segoe_small"
                android:hint="@string/name_example"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_dark"
                android:textSize="@dimen/title" />

            <TextView
                android:id="@+id/name_support_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/segoe_small"
                android:text="@string/name_support_message"
                android:textColor="@color/red"
                android:textSize="@dimen/detail_text"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/segoe_small"
                android:text="@string/last_name"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/subtitle" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/last_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name"
                android:backgroundTint="@color/grey_dark"
                android:fontFamily="@font/segoe_small"
                android:hint="@string/last_name_example"
                android:inputType="textPersonName"
                android:paddingVertical="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_dark"
                android:textSize="@dimen/title" />

            <TextView
                android:id="@+id/last_name_support_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/segoe_small"
                android:text="@string/last_name_support_message"
                android:textColor="@color/red"
                android:textSize="@dimen/detail_text"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/segoe_small"
                android:text="@string/email"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/subtitle" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="emailAddress"
                android:backgroundTint="@color/grey_dark"
                android:fontFamily="@font/segoe_small"
                android:hint="@string/email_example"
                android:inputType="textEmailAddress"
                android:paddingVertical="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_dark"
                android:textSize="@dimen/title" />

            <TextView
                android:id="@+id/email_support_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/segoe_small"
                android:text="@string/email_support_message"
                android:textColor="@color/red"
                android:textSize="@dimen/detail_text"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/segoe_small"
                android:text="@string/password"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/subtitle" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="password"
                android:backgroundTint="@color/grey_dark"
                android:fontFamily="@font/segoe_small"
                android:hint="@string/password_example"
                android:inputType="textPassword"
                android:paddingVertical="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_dark"
                android:textSize="@dimen/title"
                app:passwordToggleEnabled="true" />

            <TextView
                android:id="@+id/password_support_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/segoe_small"
                android:text="@string/password_support_message"
                android:textColor="@color/red"
                android:textSize="@dimen/detail_text"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/password_confirmation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/segoe_small"
                android:text="@string/password_confirmation"
                android:textColor="@color/grey_dark"
                android:textSize="12sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_confirmation_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="password"
                android:backgroundTint="@color/grey_dark"
                android:fontFamily="@font/segoe_small"
                android:hint="@string/password_example"
                android:inputType="textPassword"
                android:paddingVertical="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_dark"
                android:textSize="16sp"
                app:passwordToggleEnabled="true" />

            <TextView
                android:id="@+id/password_confirmation_support_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/segoe_small"
                android:text="@string/password_confirmation_support_message"
                android:textColor="@color/red"
                android:textSize="@dimen/detail_text"
                android:visibility="invisible" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="@dimen/button_corner_radius"
            app:cardElevation="@dimen/button_elevation">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/accent"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:text="@string/create_your_acc"
                android:textColor="@color/button_text"
                android:textSize="@dimen/button_text" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/login_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:text="@string/already_have_an_acc"
                android:textColor="@color/grey_dark"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:text="@string/login_here"
                android:textColor="@color/accent"
                android:textSize="12sp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/google_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="@string/sign_up"
            android:textAllCaps="false"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/button_text"
            app:cornerRadius="@dimen/button_corner_radius"
            app:elevation="@dimen/button_elevation"
            app:icon="@drawable/googleg_standard_color_18"
            app:iconPadding="10dp"
            app:iconTint="#00100D0D"
            app:iconTintMode="src_atop" />
    </LinearLayout>
    </LinearLayout>