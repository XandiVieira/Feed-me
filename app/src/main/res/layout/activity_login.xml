<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/login"
            android:textColor="@color/dark_text"
            android:textSize="@dimen/title" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/login_slogan"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="36dp"
        android:gravity="top|center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/segoe_small"
                android:text="@string/email"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/subtitle" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="emailAddress"
                android:backgroundTint="@color/grey_dark"
                android:fontFamily="@font/segoe_small"
                android:hint="@string/email_example"
                android:inputType="textEmailAddress"
                android:paddingVertical="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_dark"
                android:textSize="@dimen/title" />

            <TextView
                android:id="@+id/email_support_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/segoe_small"
                android:text="@string/email_support_message"
                android:textColor="@color/red"
                android:textSize="@dimen/detail_text"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/segoe_small"
                android:text="@string/password"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/subtitle" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="password"
                    android:backgroundTint="@color/grey_dark"
                    android:fontFamily="@font/segoe_small"
                    android:hint="@string/password_example"
                    android:inputType="textPassword"
                    android:paddingVertical="8dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_dark"
                    android:textSize="@dimen/title"
                    app:passwordToggleEnabled="true" />

                <ImageView
                    android:id="@+id/password_visibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_hidden_password"
                    android:tag="invisible" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/password_support_message"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/segoe_small"
                android:text="@string/password_support_message"
                android:textColor="@color/red"
                android:textSize="@dimen/detail_text"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/segoe_bold"
                android:gravity="end"
                android:text="@string/forgot_password"
                android:textColor="@color/text"
                android:textSize="@dimen/detail_text" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/register_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:text="@string/do_not_have_an_acc"
                android:textColor="@color/accent"
                android:textSize="@dimen/title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:text="@string/sign_up"
                android:textColor="@color/accent"
                android:textSize="@dimen/title" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="@dimen/button_margin"
            android:layout_marginVertical="16dp"
            android:elevation="@dimen/button_elevation"
            app:cardCornerRadius="@dimen/button_corner_radius">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/accent"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="@string/signin"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text" />
        </androidx.cardview.widget.CardView>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/google_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp" />
    </LinearLayout>
</LinearLayout>